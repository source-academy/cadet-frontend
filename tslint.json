{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "@blueprintjs/tslint-config/blueprint-rules"],
  "rules": {
    "interface-over-type-literal": false,
    "no-empty": false,
    "object-literal-sort-keys": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "blueprint-classes-constants": true,
    "blueprint-html-components": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/components/academy/game/**/*.js"
    ]
  }
}
